{
  "name": "zonv",
  "version": "2.1.2",
  "description": "configure your env with zod validation schema",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/config-v4.js",
      "require": "./dist/cjs/config-v4.cjs",
      "types": "./dist/config-v4.d.ts"
    },
    "./env-config": {
      "import": "./dist/env-config-v4.js",
      "require": "./dist/cjs/env-config-v4.cjs",
      "types": "./dist/env-config-v4.d.ts"
    },
    "./v3": {
      "import": "./dist/config-v3.js",
      "require": "./dist/cjs/config-v3.cjs",
      "types": "./dist/config-v3.d.ts"
    },
    "./v3/env-config": {
      "import": "./dist/env-config-v3.js",
      "require": "./dist/cjs/env-config-v3.cjs",
      "types": "./dist/env-config-v3.d.ts"
    },
    "./v4": {
      "import": "./dist/config-v4.js",
      "require": "./dist/cjs/config-v4.cjs",
      "types": "./dist/config-v4.d.ts"
    },
    "./v4/env-config": {
      "import": "./dist/env-config-v4.js",
      "require": "./dist/cls/env-config-v4.js",
      "types": "./dist/env-config-v4.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/config-v4.d.ts"
      ],
      "env-config": [
        "./dist/env-config-v4.d.ts"
      ],
      "v3": [
        "./dist/config-v3.d.ts"
      ],
      "v3/env-config": [
        "./dist/env-config-v3.d.ts"
      ],
      "v4": [
        "./dist/config-v4.d.ts"
      ],
      "v4/env-config": [
        "./dist/env-config-v4.d.ts"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devnazim/zonv"
  },
  "scripts": {
    "test": "rm -rf ./dist && npm run build:esm && node --test-concurrency 1 --test ./dist/*.test.js ./dist/**/*.test.js ",
    "build:cjs": "node scripts/build-cjs.js && tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "npm run build:esm && npm run build:cjs",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "keywords": [
    "config",
    "configure",
    "env",
    "environment",
    "zod",
    "validation"
  ],
  "author": "nazim",
  "license": "BSD-2-Clause",
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^22.13.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^16.3.0",
    "prettier": "^3.5.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  },
  "dependencies": {
    "dset": "^3.1.4",
    "lodash.merge": "^4.6.2"
  }
}