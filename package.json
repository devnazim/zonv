{
  "name": "zonv",
  "version": "2.2.0",
  "description": "Type-safe configuration management with Zod schema validation. Load config from JSON files and environment variables with full TypeScript support.",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/cjs/config-v4.cjs",
  "module": "./dist/config-v4.js",
  "types": "./dist/config-v4.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/test-utils.*",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/config-v4.js",
      "require": "./dist/cjs/config-v4.cjs",
      "types": "./dist/config-v4.d.ts"
    },
    "./env-config": {
      "import": "./dist/env-config-v4.js",
      "require": "./dist/cjs/env-config-v4.cjs",
      "types": "./dist/env-config-v4.d.ts"
    },
    "./v3": {
      "import": "./dist/config-v3.js",
      "require": "./dist/cjs/config-v3.cjs",
      "types": "./dist/config-v3.d.ts"
    },
    "./v3/env-config": {
      "import": "./dist/env-config-v3.js",
      "require": "./dist/cjs/env-config-v3.cjs",
      "types": "./dist/env-config-v3.d.ts"
    },
    "./v4": {
      "import": "./dist/config-v4.js",
      "require": "./dist/cjs/config-v4.cjs",
      "types": "./dist/config-v4.d.ts"
    },
    "./v4/env-config": {
      "import": "./dist/env-config-v4.js",
      "require": "./dist/cjs/env-config-v4.cjs",
      "types": "./dist/env-config-v4.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/config-v4.d.ts"
      ],
      "env-config": [
        "./dist/env-config-v4.d.ts"
      ],
      "v3": [
        "./dist/config-v3.d.ts"
      ],
      "v3/env-config": [
        "./dist/env-config-v3.d.ts"
      ],
      "v4": [
        "./dist/config-v4.d.ts"
      ],
      "v4/env-config": [
        "./dist/env-config-v4.d.ts"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devnazim/zonv"
  },
  "homepage": "https://github.com/devnazim/zonv#readme",
  "bugs": {
    "url": "https://github.com/devnazim/zonv/issues"
  },
  "scripts": {
    "test": "rm -rf ./dist && npm run build:esm && node --test-concurrency 1 --test ./dist/*.test.js ./dist/**/*.test.js ",
    "build:cjs": "tsc -p tsconfig.cjs.json && node scripts/build-cjs.js",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build": "npm run build:esm && npm run build:cjs",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm test && npm run build"
  },
  "keywords": [
    "config",
    "configuration",
    "env",
    "environment",
    "environment-variables",
    "zod",
    "validation",
    "schema",
    "typescript",
    "type-safe",
    "dotenv",
    "settings",
    "json-config",
    "config-management",
    "env-vars",
    "runtime-validation"
  ],
  "author": {
    "name": "nazim",
    "url": "https://github.com/devnazim"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^24.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "peerDependencies": {
    "zod": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": false
    }
  },
  "dependencies": {
    "dset": "^3.1.4",
    "lodash.merge": "^4.6.2"
  }
}
